{
	"name": "kime-web-playground",
	"version": "0.1.0",
	"type": "module",
	"packageManager": "pnpm@8.6.12",
	"scripts": {
		"wasm:build": "cargo xtask pack --verbose",
		"wasm:dev": "cargo xtask pack --watch --verbose",
		"web:dev": "esbuild build.ts --outfile=.build.js && PORT=8080 node .build.js ./dist/web",
		"web:build": "esbuild build.ts --outfile=.build.js && NODE_ENV=production node .build.js ./dist/web",
		"xtask:setup": "cargo build -p xtask --release --locked",
		"build": "pnpm wasm:build && pnpm web:build"
	},
	"devDependencies": {
		"@types/node": "^20.5.6",
		"@xnuk/tsconfig": "^3.0.0",
		"esbuild": "^0.19.2",
		"typescript": "^5.1.6"
	}
}
